<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="articles">
    <% @articles.each do |article| %>
    <%= render "index", :article => article %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path , :remote => true, :id => "new_article_link" %>
