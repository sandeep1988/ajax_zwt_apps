<tr id="product_<%= product.id %>">
	<td><%= product.name %></td>
	<td><%= product.category.name %></td>
	<td>$<%= product.price %></td>
	<td><%= product.color %></td>
	<td><%= link_to 'Edit', edit_product_path(product) , :remote => true , class: "btn" %></td>
	<td><%= link_to 'Destroy', product, :remote => true,method: :delete, class: "btn btn-danger"%></td>
</tr>